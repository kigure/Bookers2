<% if @user.errors.any? %>
  <%= @user.errors.count %>count error
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<p id="mi-2"></p>
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>User info</h2>

            <%= form_with model: @user do |f| %>

           <p>Name</p>
           <%= f.text_field :name, class: 'form-control' %>
           
           <p>image</p>
            <%= f.file_field :profile_image %>
           
           <p>Introduction</p>
           <%= f.text_area :introduction, class: 'form-control' %>
           
	       <div class="mt-2 mb-2">
           <%= f.submit 'Update User', class: 'btn btn-outline-success' %>
           </div>
           <% end %>
        </div>
    </div>
</div>