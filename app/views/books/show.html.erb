<%= flash[:update] %>
<p id="mi-2"></p>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
           <h2>User info</h2>
           <%= image_tag @book.user.get_profile_image(100, 100) %>
           <table class="table">
               <tbody>
                 <tr></tr>
                   <tr>
	                 <th>name</th>
	                 <th><%= @book.user.name %></th>
                   </tr>
                   <tr>
	                 <th>introduction</th>
	                 <th><%= @book.user.introduction %></th>
                   </tr>
               </tbody>
           </table>
           <div class="row">
               <%= link_to edit_user_path(@book.user), class: 'btn btn-outline-secondary btn-block' do  %>
               <i class="fas fa-user-cog"></i>
               <% end %>
           </div>
           <h2 class="mt-3">New books</h2>
           <%= form_with model: Book.new do |f| %>
           <p>Title</p>
           <%= f.text_field :title %>

           <p>Opinion</p>
           <%= f.text_area :body %>

         　<%= f.submit 'Create Book', class: 'btn btn-outline-success' %>
           <% end %>
        </div>

<div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
        <tbody>
            <tr>
                <td>
                    <%= link_to user_path(@book.user.id) do %>
                      <%= image_tag @book.user.get_profile_image(100, 100) %>
                      <%= @book.user.name %>
                    <% end %>
                </td>
                <td>
                    <%= link_to book_path(@book) do %>
                    <%= @book.title %>
                    <% end %>
                </td>
                <td><%= @book.body %></td>
                <% if @book.user.id == current_user.id %>
                <td>
                  <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-sm btn-success' %>
                </td>
                <td>
                    <%= link_to 'Destroy', destroy_book_path(@book), class: 'btn btn-sm btn-danger', method: :delete, "data-confirm" => "本当に削除しますか？" %>
                </td>
                <% end %>
            </tr>
        </tbody>
    </table>
</div>
</div>
</div>
